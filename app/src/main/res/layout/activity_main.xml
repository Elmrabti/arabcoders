<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sheikh_mohammed"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt2"
        android:layout_marginBottom="6dp"
        android:background="#99000000"
        android:paddingLeft="6dp"
        android:text="My message to the arab youth is to take initiative, do not waste time and miss opportunities, The time is ripe for scientific discoveries"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="#99000000"
        android:paddingLeft="6dp"
        android:text="Sheikh Mohammed bin Rashid Al Maktoum"
        android:textColor="#fff" />

</RelativeLayout>